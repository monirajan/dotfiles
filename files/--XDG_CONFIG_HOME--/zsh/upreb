#compdef upreb
#!/usr/bin/env zsh

# vim:filetype=zsh syntax=zsh tabstop=2 shiftwidth=2 softtabstop=2 expandtab autoindent fileencoding=utf-8

# git command: upreb

# Source shell helpers if they aren't already loaded
type is_executable &> /dev/null 2>&1 || source "${HOME}/.shellrc"

# Note: Use a function so that it can accept parameters
# This function is used to run the `git upreb` command for all the locally checked-out branches of the specified folder. If no folder is specified, the function defaults to using the current directory.
upreb() {
  local folder="${1:-${PWD}}"
  section_header "$(yellow 'Upreb-ing') $(purple "${folder}")"

  local current_branch="$(git -C "${folder}" br)"
  echo "current branch: $(yellow "${current_branch}")"
  local local_branches=($(git -C "${folder}" branch --format='%(refname:short)'))
  if [[ ${#local_branches[@]} -gt 0 ]]; then
    # remove the current_branch from the list of branches
    local_branches=("${(@)local_branches:#$current_branch}")
    # add the current branch to the end of the list
    local_branches+="${current_branch}"

    for branch in "${local_branches[@]}"; do
      echo "processing: $(yellow "${branch}")"
      git -C "${folder}" switch "${branch}"
      git -C "${folder}" upreb
      git -C "${folder}" push
      echo "$(red $(print_chars_for_length))"
    done
    unset local_branches
  fi
  unset current_branch
}

if is_executable "${PERSONAL_BIN_DIR}/upreb-${PWD##*/}.sh"; then
  . "${PERSONAL_BIN_DIR}/upreb-${PWD##*/}.sh" "$@"
else
  upreb "$@"
fi
